<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="mxc_dropship_innocigs.subscriber.templates" class="MxcDropshipInnocigs\Subscriber\TemplateRegistration">
            <argument>%mxc_dropship_innocigs.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <tag name="shopware.event_subscriber"/>
        </service>
        <service id="mxc_dropship_innocigs.subscriber.mainDetail" class="MxcDropshipInnocigs\Subscriber\MainDetailSelector">
            <tag name="shopware.event_subscriber"/>
        </service>
        <service id="Shopware_CronJob_MxcDsiImport"
                 class="MxcDropshipInnocigs\Cronjobs\ImportCronJob">
            <tag name="shopware.event_subscriber"/>
        </service>
        <service
                id="mxc_dropship_innocigs.commands.import_command"
                class="MxcDropshipInnocigs\Commands\ImportCommand">
            <tag name="console.command" command="mxcdsi:import"/>
        </service>
        <service id="Shopware_CronJob_MxcDsiUpdateStock"
                 class="MxcDropshipInnocigs\Cronjobs\UpdateStockCronJob">
            <tag name="shopware.event_subscriber"/>
        </service>
        <service id="Shopware_CronJob_MxcDsiUpdatePrices"
                 class="MxcDropshipInnocigs\Cronjobs\UpdatePricesCronJob">
            <tag name="shopware.event_subscriber"/>
        </service>
        <service
                id="mxc_dropship_innocigs.commands.update_stock_command"
                class="MxcDropshipInnocigs\Commands\UpdateStockCommand">
            <tag name="console.command" command="mxcdsi:updatestock"/>
        </service>
        <service id="mxc_dropship_innocigs.list_product_service"
                 class="MxcDropshipInnocigs\Shopware\Bundle\StoreFrontBundle\ListProductServiceDecorator"
                 decorates="shopware_storefront.list_product_service"
                 public="false">
            <argument type="service" id="mxc_dropship_innocigs.list_product_service.inner"/>
        </service>
    </services>
</container>
